{
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "error",
    "prefer-const": "error",
    "no-var": "error",
    "semi": "error"
  },
  "overrides": [
    {
      "files": ["**/*.test.ts", "**/*.spec.ts"],
      "env": {
        "jest": true
      },
      "rules": {
        "no-undef": "off"
      }
    },
    {
      "files": ["**/types/**/*.ts", "**/utils/**/*.ts"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ],
  "ignorePatterns": ["dist/", "node_modules/"]
} 